@model OutReachFeedBack.Models.UnRegisteredVolunteerFeedbackDTO
@{
    ViewBag.Title = "Outreach Feedback";
    Layout = "~/Views/Shared/FeedbackLayout.cshtml";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("UnregisteredFeedback", "FeedBack", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="jumbotron">
        <div class="row" style="text-align:center;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="height:50px">
                <h4><span style="vertical-align:middle;">Feedback for Event: @Model.EventName, Dated @Model.EventDate</span></h4>
            </div>
        </div>
        <div class="row" style="padding-top:20px">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <b>Choose Option</b>
                <b style="color:red">*</b>
                <select name="FeedbackText" id="FeedbackText" data-val="true" data-val-required="This field is Required."
                        class="input form-control selecto" style="width: 100% !important; text-align: center;border:1px solid #0094ff">
                    <option value="" selected="selected" style="padding:3px">Select Option</option>
                    <option value="Unexpected Personal Commitment">Unexpected Personal Commitment</option>
                    <option value="Unexpected Official Work">Unexpected Official Work</option>
                    <option value="Event Not What I Expected">Event Not What I Expected</option>
                    <option value="Did Not Receive Further Information About Event">Did Not Receive Further Information About Event</option>
                    <option value="Incorrectly Registered">Incorrectly Registered</option>
                    <option value="Do Not Wish To Disclose">Do Not Wish To Disclose</option>
                </select>
                <span data-valmsg-for="FeedbackText" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="row" style="padding-top:20px">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <button type="submit" class="btn btn-success btn-lg" value="Submit" style="width: 100% !important">
                    Submit
                </button>
            </div>

        </div>
    </div>
    <div>
        <input type="hidden" name="EmployeeID" value=@Model.EmployeeID />
        <input type="hidden" name="EventId" value=@Model.EventId />
        <input type="hidden" name="EventName" value=@Model.EventName />
        <input type="hidden" name="EventDate" value=@Model.EventDate />
        <input type="hidden" name="Id" value="0" />
    </div>
}

